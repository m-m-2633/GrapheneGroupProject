<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    
    
    
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0066CC"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#004C99"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#E6F2FF"/>
    <SolidColorBrush x:Key="PrimaryMediumBrush" Color="#3385D6"/>
    
    
    <SolidColorBrush x:Key="AccentBrush" Color="#00A896"/>
    <SolidColorBrush x:Key="AccentDarkBrush" Color="#028176"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="#E0F7F5"/>
    
    
    <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="#D1FAE5"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
    <SolidColorBrush x:Key="WarningLightBrush" Color="#FEF3C7"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#EF4444"/>
    <SolidColorBrush x:Key="ErrorLightBrush" Color="#FEE2E2"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#3B82F6"/>
    <SolidColorBrush x:Key="InfoLightBrush" Color="#DBEAFE"/>
    
    
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F8FAFC"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="BorderDarkBrush" Color="#CBD5E1"/>
    <SolidColorBrush x:Key="ShadowBrush" Color="#94A3B8"/>
    
    
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1E293B"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#64748B"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#CBD5E1"/>
    <SolidColorBrush x:Key="TextWhiteBrush" Color="#FFFFFF"/>
    
    
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0066CC" Offset="0"/>
        <GradientStop Color="#0052A3" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#00A896" Offset="0"/>
        <GradientStop Color="#028176" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#0066CC" Offset="0"/>
        <GradientStop Color="#0052A3" Offset="0.5"/>
        <GradientStop Color="#00A896" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="CardShadowBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#10000000" Offset="0"/>
        <GradientStop Color="#00000000" Offset="1"/>
    </LinearGradientBrush>
    
    
    <SolidColorBrush x:Key="OverlayBrush" Color="#80000000"/>
    <SolidColorBrush x:Key="OverlayLightBrush" Color="#40000000"/>
    
    
    <SolidColorBrush x:Key="Chart1Brush" Color="#0066CC"/>
    <SolidColorBrush x:Key="Chart2Brush" Color="#00A896"/>
    <SolidColorBrush x:Key="Chart3Brush" Color="#F59E0B"/>
    <SolidColorBrush x:Key="Chart4Brush" Color="#EF4444"/>
    <SolidColorBrush x:Key="ChartGridBrush" Color="#F1F5F9"/>
    
    
    <SolidColorBrush x:Key="HeatMapLowBrush" Color="#06B6D4"/>
    <SolidColorBrush x:Key="HeatMapMediumBrush" Color="#FBBF24"/>
    <SolidColorBrush x:Key="HeatMapHighBrush" Color="#EF4444"/>
    
</ResourceDictionary>
