<Window x:Class="GrapheneSensore.Views.ClinicianWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:GrapheneSensore.Controls"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Sensore - Clinician Dashboard"
        Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" Padding="24,18">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.15" BlurRadius="10" ShadowDepth="2" Direction="270"/>
            </Border.Effect>
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <Border Width="40" Height="40" Background="White" CornerRadius="20" Margin="0,0,15,0">
                        <TextBlock Text="C" FontSize="24" FontWeight="Bold" Foreground="#0066CC" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="SENSORE" FontSize="26" FontWeight="Black" Foreground="White" Margin="0,0,0,2"/>
                        <TextBlock Text="Clinician Dashboard" FontSize="13" Foreground="White" Opacity="0.9"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Border Background="#EF4444" CornerRadius="18" Padding="14,8" Margin="0,0,20,0"
                            Visibility="{Binding UnacknowledgedAlertCount, Converter={StaticResource NullToVisibilityConverter}}">
                        <Border.Effect>
                            <DropShadowEffect Color="#EF4444" Opacity="0.4" BlurRadius="12" ShadowDepth="0"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš " FontWeight="Bold" Foreground="White" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding UnacknowledgedAlertCount}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text=" Active Alerts" Foreground="White" Margin="6,0,0,0" FontSize="14"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#20FFFFFF" CornerRadius="20" Padding="14,8" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="32" Height="32" Background="White" CornerRadius="16" Margin="0,0,10,0">
                                <TextBlock Text="{Binding CurrentUser.FullName, StringFormat={}{0:1}}" 
                                           FontSize="14" FontWeight="Bold" Foreground="#0066CC" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="{Binding CurrentUser.FullName}" FontSize="15" Foreground="White" 
                                       FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Button Content="Logout" Style="{StaticResource SecondaryButton}" Click="LogoutButton_Click" 
                            Foreground="White" BorderBrush="White" Padding="16,8"/>
                </StackPanel>
            </Grid>
        </Border>

        
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            
            <Border Grid.Column="0" Style="{StaticResource ElevatedCard}" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{StaticResource PrimaryLightBrush}" CornerRadius="8" Padding="12,10" Margin="0,0,0,15">
                        <TextBlock Text="ðŸ‘¥ My Patients" FontSize="18" FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryBrush}"/>
                    </Border>

                    <TextBox Grid.Row="1" 
                             x:Name="SearchTextBox" 
                             Margin="0,0,0,15"
                             TextChanged="SearchTextBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="ðŸ” Search patients..." 
                                                                   Foreground="Gray" 
                                                                   Margin="5,0,0,0"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <ListBox Grid.Row="2" 
                             x:Name="PatientsListBox"
                             BorderThickness="0"
                             SelectionChanged="PatientsListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10" Margin="0,0,0,5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" 
                                                   Text="{Binding FullName}" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="14"/>
                                        <TextBlock Grid.Row="1" 
                                                   Text="{Binding Email}" 
                                                   FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Grid.Row="3" 
                            Content="ðŸ”” View All Alerts" 
                            Style="{StaticResource PrimaryButton}"
                            Click="ViewAllAlerts_Click"
                            Margin="0,15,0,0"/>
                </Grid>
            </Border>

            
            <Grid Grid.Column="1" Margin="10,0,0,0">
                <Border Style="{StaticResource ElevatedCard}" x:Name="EmptyStatePanel">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ‘¤" FontSize="48" Foreground="{StaticResource BorderBrush}" 
                                   TextAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="Select a patient to view details" 
                                   FontSize="20" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextAlignment="Center"/>
                        <TextBlock Text="Choose a patient from the list on the left" 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextDisabledBrush}"
                                   TextAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <Grid x:Name="PatientDetailsPanel" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    
                    <Border Grid.Row="0" Style="{StaticResource ElevatedCard}" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="PatientNameText" 
                                           Text="Patient Name" 
                                           FontSize="24" 
                                           FontWeight="Bold"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Email: " Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock x:Name="PatientEmailText" Text="email@example.com"/>
                                    <TextBlock Text=" | Phone: " Foreground="{StaticResource TextSecondaryBrush}" Margin="15,0,0,0"/>
                                    <TextBlock x:Name="PatientPhoneText" Text="N/A"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <ComboBox x:Name="TimeRangeComboBox" 
                                          Width="150" 
                                          SelectedIndex="0"
                                          SelectionChanged="TimeRangeComboBox_SelectionChanged"
                                          Margin="0,0,10,0">
                                    <ComboBoxItem Content="Last 1 Hour"/>
                                    <ComboBoxItem Content="Last 6 Hours"/>
                                    <ComboBoxItem Content="Last 24 Hours"/>
                                    <ComboBoxItem Content="Last 7 Days"/>
                                </ComboBox>
                                <Button Content="Generate Report" 
                                        Style="{StaticResource PrimaryButton}"
                                        Click="GenerateReport_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    
                    <TabControl Grid.Row="1" BorderThickness="0" Background="Transparent">
                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TabItem">
                                            <Border Name="Border" Background="White" Padding="15,10" Margin="0,0,5,0" CornerRadius="8,8,0,0">
                                                <ContentPresenter ContentSource="Header"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TabControl.Resources>

                        
                        <TabItem Header="Overview">
                            <Grid Background="White">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                
                                <Grid Grid.Row="0" Margin="20,20,20,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Style="{StaticResource MetricCard}" Background="{StaticResource InfoLightBrush}" Margin="0,0,8,0">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <TextBlock Text="ðŸ”¥" FontSize="16" Margin="0,0,6,0"/>
                                                <TextBlock Text="Avg Peak Pressure" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock x:Name="AvgPeakPressureText" Text="0" FontSize="32" FontWeight="Black" Foreground="{StaticResource InfoBrush}"/>
                                                <TextBlock Text="mmHg" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="6,8,0,0" VerticalAlignment="Bottom"/>
                                            </StackPanel>
                                            <Border Height="3" Background="{StaticResource InfoBrush}" CornerRadius="2" Margin="0,8,0,0" HorizontalAlignment="Left" Width="50"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="1" Style="{StaticResource MetricCard}" Background="{StaticResource ErrorLightBrush}" Margin="4,0">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <TextBlock Text="âš " FontSize="16" Margin="0,0,6,0"/>
                                                <TextBlock Text="Total Alerts" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}"/>
                                            </StackPanel>
                                            <TextBlock x:Name="TotalAlertsText" Text="0" FontSize="32" FontWeight="Black" Foreground="{StaticResource ErrorBrush}"/>
                                            <TextBlock Text="in selected period" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                                            <Border Height="3" Background="{StaticResource ErrorBrush}" CornerRadius="2" Margin="0,6,0,0" HorizontalAlignment="Left" Width="50"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="2" Style="{StaticResource MetricCard}" Background="{StaticResource SuccessLightBrush}" Margin="8,0,0,0">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <TextBlock Text="ðŸ“Š" FontSize="16" Margin="0,0,6,0"/>
                                                <TextBlock Text="Avg Contact Area" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock x:Name="AvgContactAreaText" Text="0" FontSize="32" FontWeight="Black" Foreground="{StaticResource SuccessBrush}"/>
                                                <TextBlock Text="%" FontSize="18" Foreground="{StaticResource TextSecondaryBrush}" Margin="4,8,0,0" VerticalAlignment="Bottom"/>
                                            </StackPanel>
                                            <Border Height="3" Background="{StaticResource SuccessBrush}" CornerRadius="2" Margin="0,8,0,0" HorizontalAlignment="Left" Width="50"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                
                                <Grid Grid.Row="1" Margin="20,10,20,20">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Text="Peak Pressure Trend" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                            <lvc:CartesianChart Grid.Row="1" x:Name="ClinicianPeakPressureChart" LegendLocation="None"/>
                                        </Grid>
                                    </Border>

                                    <Border Grid.Row="1" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="15">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Text="Contact Area Trend" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                            <lvc:CartesianChart Grid.Row="1" x:Name="ClinicianContactAreaChart" LegendLocation="None"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Grid>
                        </TabItem>

                        
                        <TabItem Header="Alerts">
                            <Border Background="White" Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="Patient Alerts" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>

                                <DataGrid Grid.Row="1"
                                          x:Name="PatientAlertsDataGrid"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          IsReadOnly="True"
                                          GridLinesVisibility="Horizontal"
                                          HeadersVisibility="Column"
                                          RowHeight="40">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Date/Time" Binding="{Binding AlertDateTime, StringFormat='{}{0:MMM dd, yyyy HH:mm}'}" Width="150"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding AlertType}" Width="120"/>
                                        <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="100"/>
                                        <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*"/>
                                        <DataGridTemplateColumn Header="Actions" Width="150">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="Acknowledge" 
                                                            Click="AcknowledgeAlert_Click"
                                                            Tag="{Binding AlertId}"
                                                            Style="{StaticResource PrimaryButton}"
                                                            Padding="10,5"
                                                            FontSize="11"
                                                            Visibility="{Binding IsAcknowledged, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                            </Border>
                        </TabItem>

                        
                        <TabItem Header="Comments">
                            <Border Background="White" Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="Patient Comments" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="PatientCommentsListBox">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource BackgroundBrush}" 
                                                        Padding="15" 
                                                        Margin="0,0,0,10" 
                                                        CornerRadius="8"
                                                        BorderBrush="{StaticResource BorderBrush}"
                                                        BorderThickness="1">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                                            <TextBlock Text="{Binding User.FullName}" FontWeight="SemiBold" FontSize="13"/>
                                                            <TextBlock Text=" - " FontSize="13" Margin="5,0"/>
                                                            <TextBlock Text="{Binding CommentDateTime, StringFormat='{}{0:MMM dd, yyyy HH:mm}'}" 
                                                                       FontSize="13" 
                                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                                        </StackPanel>

                                                        <TextBlock Grid.Row="1" 
                                                                   Text="{Binding CommentText}" 
                                                                   TextWrapping="Wrap" 
                                                                   FontSize="14" 
                                                                   Margin="0,0,0,10"/>
                                                        
                                                        <Button Grid.Row="2" 
                                                                Content="Reply as Clinician" 
                                                                Style="{StaticResource PrimaryButton}"
                                                                Padding="12,6"
                                                                FontSize="12"
                                                                Click="ReplyToComment_Click"
                                                                Tag="{Binding}"
                                                                HorizontalAlignment="Left"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                            </Border>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
