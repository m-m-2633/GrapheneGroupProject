<Window x:Class="GrapheneSensore.Views.FeedbackFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:GrapheneSensore.Helpers"
        Title="Feedback Form" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="30,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <Border Grid.Row="0" Background="#1976D2" Padding="25,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ“ Applicant Feedback Form" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="{Binding Applicant.FullName, StringFormat='Applicant: {0}'}" 
                               FontSize="14" 
                               Foreground="#E3F2FD" 
                               Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding Template.TemplateName, StringFormat='Template: {0}'}" 
                               FontSize="13" 
                               Foreground="#E3F2FD" 
                               Margin="0,3,0,0"/>
                </StackPanel>

                
                <Border Grid.Column="1" 
                        Background="#FFC107" 
                        CornerRadius="20" 
                        Padding="20,10"
                        VerticalAlignment="Center">
                    <TextBlock Text="{Binding ProgressText}" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#424242"/>
                </Border>
            </Grid>
        </Border>

        
        <Border Grid.Row="1" Background="White" Padding="20,15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock Text="{Binding CurrentSection.SectionName}" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#1976D2"/>
                <TextBlock Text="{Binding CurrentSection.Description}" 
                           FontSize="13" 
                           Foreground="#757575" 
                           TextWrapping="Wrap"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                
                <StackPanel Grid.Column="0">
                    
                    <Border Background="White" CornerRadius="8" Padding="25" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
                        </Border.Effect>
                        
                        <StackPanel>
                            <TextBlock Text="ðŸ“‹ Available Codes" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#1976D2" 
                                       Margin="0,0,0,15"/>
                            
                            <ItemsControl ItemsSource="{Binding CurrentCodes}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F9F9F9" 
                                                CornerRadius="5" 
                                                Padding="15" 
                                                Margin="0,0,0,10">
                                            <StackPanel>
                                                <CheckBox IsChecked="{Binding IsChecked}" 
                                                          FontSize="14" 
                                                          FontWeight="SemiBold">
                                                    <TextBlock Text="{Binding Code.CodeText}" TextWrapping="Wrap"/>
                                                </CheckBox>
                                                <TextBlock Text="{Binding Code.Description}" 
                                                           FontSize="12" 
                                                           Foreground="#757575" 
                                                           TextWrapping="Wrap"
                                                           Margin="25,5,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    
                    <Border Background="White" CornerRadius="8" Padding="25">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
                        </Border.Effect>
                        
                        <StackPanel>
                            <TextBlock Text="ðŸ’¬ Additional Feedback" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#1976D2" 
                                       Margin="0,0,0,15"/>
                            
                            <TextBox Text="{Binding AdditionalFeedback, UpdateSourceTrigger=PropertyChanged}" 
                                     TextWrapping="Wrap" 
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     MinHeight="150"
                                     Padding="10"
                                     FontSize="13"
                                     BorderBrush="#DDDDDD"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                
                <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <TextBlock Text="ðŸ“š Paragraph Library" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#1976D2" 
                                   Margin="0,0,0,15"/>
                        
                        <Button Content="ðŸ”„ Load Paragraphs" 
                                Command="{Binding LoadParagraphsCommand}"
                                Style="{StaticResource NavButtonStyle}"
                                Background="#4CAF50"
                                Margin="0,0,0,15"/>
                        
                        <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Paragraphs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F5F5F5" 
                                                CornerRadius="5" 
                                                Padding="10" 
                                                Margin="0,0,0,10"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="ParagraphItem_Click"
                                                Tag="{Binding}">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Title}" 
                                                           FontSize="12" 
                                                           FontWeight="Bold" 
                                                           Foreground="#1976D2"/>
                                                <TextBlock Text="{Binding Content}" 
                                                           FontSize="11" 
                                                           Foreground="#757575" 
                                                           TextWrapping="Wrap"
                                                           MaxHeight="60"
                                                           TextTrimming="CharacterEllipsis"
                                                           Margin="0,5,0,0"/>
                                                <TextBlock Text="{Binding Category, StringFormat='Category: {0}'}" 
                                                           FontSize="10" 
                                                           Foreground="#9E9E9E" 
                                                           Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        
        <Border Grid.Row="2" 
                Background="#AA000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="â³" FontSize="48" HorizontalAlignment="Center"/>
                <TextBlock Text="Processing..." 
                           Foreground="White" 
                           FontSize="18" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        
        <Border Grid.Row="3" Background="White" Padding="25,15" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                
                <Button Grid.Column="0" 
                        Content="â¬…ï¸ Previous Section" 
                        Command="{Binding PreviousSectionCommand}"
                        Style="{StaticResource NavButtonStyle}"/>

                
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Button Content="ðŸ’¾ Save Draft" 
                            Command="{Binding SaveDraftCommand}"
                            Style="{StaticResource NavButtonStyle}"
                            Background="#FF9800"
                            Margin="5,0"/>
                    <Button Content="âŒ Abort" 
                            Command="{Binding AbortCommand}"
                            Style="{StaticResource NavButtonStyle}"
                            Background="#F44336"
                            Margin="5,0"/>
                    <Button Content="âœ… Complete" 
                            Command="{Binding CompleteCommand}"
                            Style="{StaticResource NavButtonStyle}"
                            Background="#4CAF50"
                            Margin="5,0"/>
                </StackPanel>

                
                <Button Grid.Column="2" 
                        Content="Next Section âž¡ï¸" 
                        Command="{Binding NextSectionCommand}"
                        Style="{StaticResource NavButtonStyle}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
