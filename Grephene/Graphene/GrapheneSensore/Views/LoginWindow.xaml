<Window x:Class="GrapheneSensore.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:GrapheneSensore.ViewModels"
        Title="Graphene Sensore - Login"
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>

    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="20">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="40" ShadowDepth="0"/>
        </Border.Effect>
        
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        
        <Border Grid.Column="0" CornerRadius="20,0,0,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0066CC" Offset="0"/>
                    <GradientStop Color="#004C99" Offset="0.5"/>
                    <GradientStop Color="#00A896" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            
            <Grid>
                
                <Canvas Opacity="0.05">
                    <Ellipse Width="400" Height="400" Canvas.Left="-100" Canvas.Top="-100" Fill="White"/>
                    <Ellipse Width="300" Height="300" Canvas.Right="-80" Canvas.Bottom="-80" Fill="White"/>
                </Canvas>
                
                <StackPanel VerticalAlignment="Center" Margin="60">
                    
                    <Border Width="80" Height="80" Background="White" CornerRadius="40" Margin="0,0,0,30" HorizontalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect Color="White" Opacity="0.3" BlurRadius="20" ShadowDepth="0"/>
                        </Border.Effect>
                        <TextBlock Text="G" FontSize="48" FontWeight="Bold" Foreground="#0066CC" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <TextBlock Text="Graphene Trace" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               Foreground="White"
                               TextAlignment="Center"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="SENSORE" 
                               FontSize="56" 
                               FontWeight="Black" 
                               Foreground="White"
                               TextAlignment="Center"
                               Margin="0,0,0,40">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="10" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                        <Border Width="50" Height="2" Background="White" Opacity="0.6" VerticalAlignment="Center"/>
                        <TextBlock Text="  Medical Innovation  " FontSize="14" Foreground="White" Opacity="0.9" VerticalAlignment="Center"/>
                        <Border Width="50" Height="2" Background="White" Opacity="0.6" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <TextBlock Text="Continuous &amp; Automated" 
                               FontSize="20" 
                               Foreground="White"
                               TextAlignment="Center"
                               Margin="0,20,0,5"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Pressure Ulcer Prevention" 
                               FontSize="20" 
                               Foreground="White"
                               TextAlignment="Center"
                               FontWeight="SemiBold"
                               Margin="0,0,0,40"/>
                    
                    
                    <StackPanel HorizontalAlignment="Center">
                        <Border Background="#40FFFFFF" CornerRadius="20" Padding="16,8" Margin="0,5">
                            <TextBlock Text="✓ E-Textile Pressure Mapping" 
                                       FontSize="14" 
                                       Foreground="White"
                                       TextAlignment="Center"/>
                        </Border>
                        <Border Background="#40FFFFFF" CornerRadius="20" Padding="16,8" Margin="0,5">
                            <TextBlock Text="✓ Smart Alert AI Analysis" 
                                       FontSize="14" 
                                       Foreground="White"
                                       TextAlignment="Center"/>
                        </Border>
                        <Border Background="#40FFFFFF" CornerRadius="20" Padding="16,8" Margin="0,5">
                            <TextBlock Text="✓ Real-time Monitoring" 
                                       FontSize="14" 
                                       Foreground="White"
                                       TextAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        
        <Border Grid.Column="1" Background="White" CornerRadius="0,20,20,0" Padding="50,40">
            <Grid>
                
                <Button Content="✕" 
                        Style="{StaticResource IconButton}"
                        Click="CloseButton_Click"
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Top"
                        Margin="0,-10,-10,0"/>
                
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Welcome Back!" 
                               FontSize="32" 
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Please login to continue to your dashboard" 
                               FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,50"/>

                    
                    <TextBlock Text="USERNAME" 
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="UsernameTextBox"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,24"
                             KeyDown="OnKeyDown"/>

                    
                    <TextBlock Text="PASSWORD" 
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,8"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Style="{StaticResource ModernPasswordBox}"
                                 Margin="0,0,0,12"
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 KeyDown="OnKeyDown"/>

                    
                    <Border Background="{StaticResource ErrorLightBrush}"
                            BorderBrush="{StaticResource ErrorBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="12"
                            Margin="0,0,0,20"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠ " FontSize="14" Foreground="{StaticResource ErrorBrush}" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding ErrorMessage}"
                                       Foreground="{StaticResource ErrorBrush}"
                                       FontSize="13"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    
                    <Button Content="SIGN IN"
                            Command="{Binding LoginCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Height="48"
                            FontSize="15"
                            Margin="0,10,0,24"/>

                    
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,0,0,24"
                                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="●" FontSize="20" Foreground="{StaticResource PrimaryBrush}" Margin="5,0">
                            <TextBlock.RenderTransform>
                                <RotateTransform Angle="0" CenterX="0" CenterY="0"/>
                            </TextBlock.RenderTransform>
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="(TextBlock.RenderTransform).(RotateTransform.Angle)"
                                                           From="0" To="360" Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                        <TextBlock Text="Authenticating..."
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    
                    <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,0,0,20"/>

                    
                    <Border Background="{StaticResource PrimaryLightBrush}"
                            BorderBrush="{StaticResource PrimaryBrush}"
                            BorderThickness="1"
                            Padding="16"
                            CornerRadius="10">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="ℹ" FontSize="16" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,8,0"/>
                                <TextBlock Text="Default Admin Credentials" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryBrush}"/>
                            </StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Username:" 
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,0,8,4"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="admin" 
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="0,0,0,4"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Password:" 
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,0,8,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="Admin@123" 
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    
                    <TextBlock Text="© 2024 Graphene Trace Ltd. All rights reserved." 
                               FontSize="11"
                               Foreground="{StaticResource TextDisabledBrush}"
                               TextAlignment="Center"
                               Margin="0,30,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
    </Border>
</Window>
