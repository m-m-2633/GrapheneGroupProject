<Window x:Class="GrapheneSensore.Views.PatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:GrapheneSensore.Controls"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Sensore - Patient Dashboard"
        Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" Padding="24,18">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.15" BlurRadius="10" ShadowDepth="2" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    
                    <Border Width="40" Height="40" Background="White" CornerRadius="20" Margin="0,0,15,0">
                        <TextBlock Text="S" FontSize="24" FontWeight="Bold" Foreground="#0066CC" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="SENSORE" FontSize="26" FontWeight="Black" Foreground="White" Margin="0,0,0,2"/>
                        <TextBlock Text="Patient Dashboard" FontSize="13" Foreground="White" Opacity="0.9"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    
                    <Border Background="#EF4444" CornerRadius="18" Padding="14,8" Margin="0,0,20,0"
                            Visibility="{Binding UnacknowledgedAlertCount, Converter={StaticResource NullToVisibilityConverter}}">
                        <Border.Effect>
                            <DropShadowEffect Color="#EF4444" Opacity="0.4" BlurRadius="12" ShadowDepth="0"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš " FontWeight="Bold" Foreground="White" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding UnacknowledgedAlertCount}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text=" Active Alerts" Foreground="White" Margin="6,0,0,0" FontSize="14"/>
                        </StackPanel>
                    </Border>
                    
                    
                    <Border Background="#20FFFFFF" CornerRadius="20" Padding="14,8" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="32" Height="32" Background="White" CornerRadius="16" Margin="0,0,10,0">
                                <TextBlock Text="{Binding CurrentUser.FullName, StringFormat={}{0:1}}" 
                                           FontSize="14" FontWeight="Bold" Foreground="#0066CC" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="{Binding CurrentUser.FullName}" FontSize="15" Foreground="White" 
                                       FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Button Content="Logout" Style="{StaticResource SecondaryButton}" Click="LogoutButton_Click" 
                            Foreground="White" BorderBrush="White" Padding="16,8"/>
                </StackPanel>
            </Grid>
        </Border>

        
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            
            <Border Grid.Row="0" Style="{StaticResource Card}" Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal">
                    <Border Background="{StaticResource PrimaryLightBrush}" CornerRadius="8" Padding="10,8" Margin="0,0,15,0">
                        <TextBlock Text="ðŸ“… View Data:" FontSize="14" FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryBrush}" VerticalAlignment="Center"/>
                    </Border>
                    <RadioButton x:Name="Radio1Hour" Content="Last 1 Hour" GroupName="TimeRange" 
                                 Style="{StaticResource ModernRadioButton}" IsChecked="True" Margin="0,0,10,0" Checked="TimeRangeChanged"/>
                    <RadioButton x:Name="Radio6Hours" Content="Last 6 Hours" GroupName="TimeRange" 
                                 Style="{StaticResource ModernRadioButton}" Margin="0,0,10,0" Checked="TimeRangeChanged"/>
                    <RadioButton x:Name="Radio24Hours" Content="Last 24 Hours" GroupName="TimeRange" 
                                 Style="{StaticResource ModernRadioButton}" Margin="0,0,10,0" Checked="TimeRangeChanged"/>
                    <RadioButton x:Name="RadioCustom" Content="Custom Range" GroupName="TimeRange" 
                                 Style="{StaticResource ModernRadioButton}" Margin="0,0,15,0" Checked="TimeRangeChanged"/>
                    <DatePicker x:Name="StartDatePicker" Margin="0,0,10,0" SelectedDateChanged="CustomDateChanged" IsEnabled="False"/>
                    <TextBlock Text="to" VerticalAlignment="Center" Margin="0,0,10,0" 
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <DatePicker x:Name="EndDatePicker" SelectedDateChanged="CustomDateChanged" IsEnabled="False"/>
                    <Button Content="ðŸ”„ Refresh" Style="{StaticResource PrimaryButton}" Click="RefreshButton_Click" Margin="20,0,0,0"/>
                </StackPanel>
            </Border>

            
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                
                <Grid Grid.Column="0" Margin="0,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        
                        <Border Grid.Column="0" Style="{StaticResource MetricCard}" 
                                Background="{StaticResource ErrorLightBrush}" Margin="0,0,8,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="âš " FontSize="16" Foreground="{StaticResource ErrorBrush}" Margin="0,0,6,0"/>
                                    <TextBlock Text="Risk Index" FontSize="13" FontWeight="SemiBold" 
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock x:Name="RiskIndexText" Text="7.3" FontSize="36" FontWeight="Black" 
                                               Foreground="{StaticResource ErrorBrush}"/>
                                    <TextBlock Text="/10" FontSize="18" Foreground="{StaticResource TextSecondaryBrush}" 
                                               Margin="4,8,0,0" VerticalAlignment="Bottom"/>
                                </StackPanel>
                                <Border Height="3" Background="{StaticResource ErrorBrush}" CornerRadius="2" 
                                        Margin="0,8,0,0" HorizontalAlignment="Left" Width="60"/>
                            </StackPanel>
                        </Border>

                        
                        <Border Grid.Column="1" Style="{StaticResource MetricCard}" 
                                Background="{StaticResource InfoLightBrush}" Margin="4,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="ðŸ“Š" FontSize="16" Margin="0,0,6,0"/>
                                    <TextBlock Text="Contact Area" FontSize="13" FontWeight="SemiBold" 
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock x:Name="ContactAreaText" Text="81" FontSize="36" FontWeight="Black" 
                                               Foreground="{StaticResource InfoBrush}"/>
                                    <TextBlock Text="%" FontSize="18" Foreground="{StaticResource TextSecondaryBrush}" 
                                               Margin="4,8,0,0" VerticalAlignment="Bottom"/>
                                </StackPanel>
                                <Border Height="3" Background="{StaticResource InfoBrush}" CornerRadius="2" 
                                        Margin="0,8,0,0" HorizontalAlignment="Left" Width="60"/>
                            </StackPanel>
                        </Border>

                        
                        <Border Grid.Column="2" Style="{StaticResource MetricCard}" 
                                Background="{StaticResource WarningLightBrush}" Margin="8,0,0,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="ðŸ”¥" FontSize="16" Margin="0,0,6,0"/>
                                    <TextBlock Text="Peak Pressure" FontSize="13" FontWeight="SemiBold" 
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock x:Name="PeakPressureText" Text="108" FontSize="36" FontWeight="Black" 
                                               Foreground="{StaticResource WarningBrush}"/>
                                    <TextBlock Text="mmHg" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" 
                                               Margin="6,8,0,0" VerticalAlignment="Bottom"/>
                                </StackPanel>
                                <Border Height="3" Background="{StaticResource WarningBrush}" CornerRadius="2" 
                                        Margin="0,8,0,0" HorizontalAlignment="Left" Width="60"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    
                    <Border Grid.Row="1" Style="{StaticResource ElevatedCard}" Margin="0,0,0,15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="{StaticResource PrimaryLightBrush}" 
                                    CornerRadius="8" Padding="12,8" Margin="0,0,0,15">
                                <TextBlock Text="ðŸŒ¡ Pressure Heat Map" FontSize="15" FontWeight="Bold" 
                                           Foreground="{StaticResource PrimaryBrush}"/>
                            </Border>
                            <controls:HeatMapControl Grid.Row="1" x:Name="HeatMapControl"/>
                        </Grid>
                    </Border>

                    
                    <Border Grid.Row="2" Style="{StaticResource Card}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Background="{StaticResource AccentLightBrush}" 
                                    CornerRadius="8" Padding="12,8" Margin="0,0,0,12">
                                <TextBlock Text="â± Timeline Navigator" FontSize="14" FontWeight="Bold" 
                                           Foreground="{StaticResource AccentBrush}"/>
                            </Border>
                            
                            <Slider Grid.Row="1" x:Name="TimelineSlider" 
                                    Minimum="0" Maximum="100" 
                                    TickFrequency="1" 
                                    IsSnapToTickEnabled="True"
                                    ValueChanged="TimelineSlider_ValueChanged"
                                    Margin="0,0,0,10"/>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" x:Name="CurrentTimeText" Text="--:--:--" FontSize="12" HorizontalAlignment="Left"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="â—€" Click="PreviousFrame_Click" Margin="0,0,5,0" Padding="8,4"/>
                                    <Button x:Name="PlayPauseButton" Content="â–¶" Click="PlayPause_Click" Margin="0,0,5,0" Padding="8,4"/>
                                    <Button Content="â–¶â–¶" Click="NextFrame_Click" Padding="8,4"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2" x:Name="FrameCountText" Text="Frame 0 / 0" FontSize="12" HorizontalAlignment="Right"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>

                
                <Grid Grid.Column="1" Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    
                    <Border Grid.Row="0" Style="{StaticResource ElevatedCard}" Margin="0,0,0,15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Background="{StaticResource SuccessLightBrush}" 
                                    CornerRadius="8" Padding="12,10" Margin="0,0,0,15">
                                <TextBlock Text="ðŸ“ˆ Pressure Trends Analysis" FontSize="16" FontWeight="Bold" 
                                           Foreground="{StaticResource SuccessBrush}"/>
                            </Border>

                            
                            <Grid Grid.Row="1" Margin="0,0,0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Peak Pressure (mmHg)" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                                <lvc:CartesianChart Grid.Row="1" x:Name="PeakPressureChart" LegendLocation="None"/>
                            </Grid>

                            
                            <Grid Grid.Row="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Contact Area (%)" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,5"/>
                                <lvc:CartesianChart Grid.Row="1" x:Name="ContactAreaChart" LegendLocation="None"/>
                            </Grid>
                        </Grid>
                    </Border>

                    
                    <Border Grid.Row="1" Style="{StaticResource ElevatedCard}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Background="{StaticResource InfoLightBrush}" 
                                    CornerRadius="8" Padding="12,10" Margin="0,0,0,15">
                                <TextBlock Text="ðŸ’¬ Comments &amp; Feedback" FontSize="16" FontWeight="Bold" 
                                           Foreground="{StaticResource InfoBrush}"/>
                            </Border>

                            
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
                                <ItemsControl x:Name="CommentsListBox">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource BackgroundBrush}" 
                                                    Padding="12" 
                                                    Margin="0,0,0,8" 
                                                    CornerRadius="4"
                                                    BorderBrush="{StaticResource BorderBrush}"
                                                    BorderThickness="1">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                                                        <TextBlock Text="{Binding User.FullName}" FontWeight="SemiBold" FontSize="12"/>
                                                        <TextBlock Text=" - " FontSize="12" Margin="5,0"/>
                                                        <TextBlock Text="{Binding CommentDateTime, StringFormat='{}{0:MMM dd, yyyy HH:mm}'}" 
                                                                   FontSize="12" 
                                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                                        <Border Background="{StaticResource AccentBrush}" 
                                                                Padding="6,2" 
                                                                CornerRadius="3" 
                                                                Margin="10,0,0,0"
                                                                Visibility="{Binding IsClinicianReply, Converter={StaticResource BoolToVisibilityConverter}}">
                                                            <TextBlock Text="Clinician" Foreground="White" FontSize="10" FontWeight="Bold"/>
                                                        </Border>
                                                    </StackPanel>

                                                    <TextBlock Grid.Row="1" Text="{Binding CommentText}" TextWrapping="Wrap" FontSize="13" Margin="0,0,0,8"/>
                                                    
                                                    <Button Grid.Row="2" 
                                                            Content="Reply" 
                                                            Style="{StaticResource SecondaryButton}"
                                                            Padding="10,4"
                                                            FontSize="11"
                                                            HorizontalAlignment="Left"
                                                            Visibility="{Binding IsClinicianReply, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="CommentTextBox"
                                         Grid.Column="0"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         MaxHeight="100"
                                         Padding="10"
                                         FontSize="13"
                                         BorderBrush="{StaticResource BorderBrush}"
                                         VerticalScrollBarVisibility="Auto"
                                         Margin="0,0,10,0"/>

                                <Button Grid.Column="1"
                                        Content="Add Comment"
                                        Style="{StaticResource PrimaryButton}"
                                        Click="AddComment_Click"
                                        VerticalAlignment="Bottom"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
