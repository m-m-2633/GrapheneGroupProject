<Window x:Class="GrapheneSensore.Views.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Patient Report"
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="30,20">
            <Grid>
                <StackPanel>
                    <TextBlock Text="SENSORE PATIENT REPORT" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"
                               Margin="0,0,0,5"/>
                    <TextBlock x:Name="PatientNameText"
                               Text="Patient Name" 
                               FontSize="18" 
                               Foreground="White"/>
                </StackPanel>
                
                <TextBlock x:Name="DateRangeText"
                           Text="Report Date Range" 
                           FontSize="14" 
                           Foreground="White"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"/>
            </Grid>
        </Border>

        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">
                
                <TextBlock Text="Summary" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>

                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="White" Padding="20" CornerRadius="8" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Total Frames Analyzed" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock x:Name="TotalFramesText" Text="0" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="White" Padding="20" CornerRadius="8" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Average Peak Pressure" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock x:Name="AvgPeakText" Text="0" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                            <TextBlock Text="mmHg" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="White" Padding="20" CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="Total Alerts" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock x:Name="TotalAlertsText" Text="0" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                
                <TextBlock Text="Detailed Metrics" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>

                <Border Background="White" Padding="20" CornerRadius="8" Margin="0,0,0,30">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15">
                            <TextBlock Text="Maximum Peak Pressure:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBlock x:Name="MaxPeakText" Text="0 mmHg" FontSize="16"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,15">
                            <TextBlock Text="Average Contact Area:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBlock x:Name="AvgContactText" Text="0%" FontSize="16"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,15">
                            <TextBlock Text="Pressure Distribution:" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Low (&lt; 100)" VerticalAlignment="Center"/>
                                <ProgressBar Grid.Row="0" Grid.Column="1" x:Name="LowPressureBar" Height="20" Margin="10,0"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" x:Name="LowPressureText" Text="0%" VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Medium (100-150)" VerticalAlignment="Center"/>
                                <ProgressBar Grid.Row="1" Grid.Column="1" x:Name="MediumPressureBar" Height="20" Margin="10,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="2" x:Name="MediumPressureText" Text="0%" VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="High (&gt; 150)" VerticalAlignment="Center"/>
                                <ProgressBar Grid.Row="2" Grid.Column="1" x:Name="HighPressureBar" Height="20" Margin="10,0" Foreground="{StaticResource ErrorBrush}"/>
                                <TextBlock Grid.Row="2" Grid.Column="2" x:Name="HighPressureText" Text="0%" VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                
                <TextBlock Text="Recommendations" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>

                <Border Background="White" Padding="20" CornerRadius="8">
                    <StackPanel x:Name="RecommendationsPanel">
                        
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        
        <Border Grid.Row="2" Background="White" Padding="20" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Print Report" 
                        Style="{StaticResource SecondaryButton}" 
                        Width="120" 
                        Click="PrintReport_Click"
                        Margin="0,0,10,0"/>
                <Button Content="Close" 
                        Style="{StaticResource PrimaryButton}" 
                        Width="100" 
                        Click="Close_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
