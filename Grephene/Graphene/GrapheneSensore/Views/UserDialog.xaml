<Window x:Class="GrapheneSensore.Views.UserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Management"
        Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <TextBlock Grid.Row="0" 
                   x:Name="TitleText"
                   Text="Add New User" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <TextBlock Text="Username *" FontSize="13" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox" FontSize="14" Padding="10" Margin="0,0,0,15"/>

                
                <StackPanel x:Name="PasswordPanel">
                    <TextBlock Text="Password *" FontSize="13" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox" FontSize="14" Padding="10" Margin="0,0,0,15"/>
                </StackPanel>

                
                <TextBlock Text="User Type *" FontSize="13" Margin="0,0,0,5"/>
                <ComboBox x:Name="UserTypeComboBox" FontSize="14" Padding="10" Margin="0,0,0,15" SelectedIndex="0">
                    <ComboBoxItem Content="Patient"/>
                    <ComboBoxItem Content="Clinician"/>
                    <ComboBoxItem Content="Admin"/>
                </ComboBox>

                
                <TextBlock Text="First Name *" FontSize="13" Margin="0,0,0,5"/>
                <TextBox x:Name="FirstNameTextBox" FontSize="14" Padding="10" Margin="0,0,0,15"/>

                
                <TextBlock Text="Last Name *" FontSize="13" Margin="0,0,0,5"/>
                <TextBox x:Name="LastNameTextBox" FontSize="14" Padding="10" Margin="0,0,0,15"/>

                
                <TextBlock Text="Email *" FontSize="13" Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" FontSize="14" Padding="10" Margin="0,0,0,15"/>

                
                <TextBlock Text="Phone Number" FontSize="13" Margin="0,0,0,5"/>
                <TextBox x:Name="PhoneTextBox" FontSize="14" Padding="10" Margin="0,0,0,15"/>

                
                <StackPanel x:Name="ClinicianPanel" Visibility="Collapsed">
                    <TextBlock Text="Assigned Clinician" FontSize="13" Margin="0,0,0,5"/>
                    <ComboBox x:Name="ClinicianComboBox" 
                              FontSize="14" 
                              Padding="10" 
                              Margin="0,0,0,15"
                              DisplayMemberPath="FullName"/>
                </StackPanel>

                
                <CheckBox x:Name="IsActiveCheckBox" Content="Active" IsChecked="True" Margin="0,10,0,0"/>

                
                <TextBlock x:Name="ErrorMessageText"
                           Text=""
                           Foreground="{StaticResource ErrorBrush}"
                           FontSize="12"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>

        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Style="{StaticResource SecondaryButton}" 
                    Width="100" 
                    Click="Cancel_Click" 
                    Margin="0,0,10,0"/>
            <Button Content="Save" 
                    Style="{StaticResource PrimaryButton}" 
                    Width="100" 
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
